# Docker install

sudo dnf -y install dnf-plugins-core
    8  sudo dnf config-manager --add-repo https://download.docker.com/linux/rhel/docker-ce.repo
    9  sudo dnf install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
   10  systemctl start docker
   11  systemctl status docker
   12  docker version


